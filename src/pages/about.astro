---
import BaseLayout from "../layouts/BaseLayout.astro";
import { aboutContent } from "../config/about";

// Get about content from config/about.ts
const pageTitle = aboutContent.pageTitle;
const about = aboutContent.sections;
---

<BaseLayout pageTitle={pageTitle}>
  <section style="margin-bottom: 2rem;">
    <h2>{about.website.title}</h2>
    {about.website.paragraphs.map((para) => {
      if (para.list) {
        return (
          <ul class="text-medium" style="padding-left: 1.5rem; list-style-type: disc;">
            {para.list.map((item: string) => (
              <li>{item}</li>
            ))}
          </ul>
        );
      }
      if (para.link) {
        return (
          <p class="text-medium">
            {para.text && <Fragment set:html={para.text} />}
            {para.link && <a href={para.link.url}><strong>{para.link.text}</strong></a>}
            {para.textAfter}
            {para.link2 && <a href={para.link2.url}>{para.link2.text}</a>}
            {para.textAfter2}
          </p>
        );
      }
      if (para.text) {
        return <p class="text-medium" set:html={para.text} />;
      }
      return null;
    })}
  </section>

