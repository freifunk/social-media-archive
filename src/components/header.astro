---
import { getLogoPath, getLogoAlt, siteConfig } from '../config/site';
import ThemeToggle from './ThemeToggle.astro';

const logoPath = getLogoPath();
const logoAlt = getLogoAlt();
const nav = siteConfig.navigation;
---
<header class="site-header">
  <nav class="main-nav">
    <div class="nav-container">
      <a href="/" class="nav-logo">
        <img src={logoPath} alt={logoAlt} class="logo" />
      </a>
      <div class="nav-links">
        <a href="/" class="nav-link">{nav.search}</a>
        <a href="/tweets/" class="nav-link">{nav.tweets}</a>
        <a href="/about/" class="nav-link">{nav.about}</a>
        <ThemeToggle />
      </div>
      <div class="hamburger">
        <span class="line"></span>
        <span class="line"></span>
        <span class="line"></span>
      </div>
    </div>
    <div class="mobile-nav-links">
      <a href="/" class="mobile-nav-link">{nav.search}</a>
      <a href="/tweets/" class="mobile-nav-link">{nav.tweets}</a>
      <a href="/about/" class="mobile-nav-link">{nav.about}</a>
      <div style="display: flex; justify-content: center; padding: var(--spacing-md);">
        <ThemeToggle />
      </div>
    </div>
  </nav>