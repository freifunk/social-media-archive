---
// components/TweetCard.astro
export interface Props {
  post: {
    data: {
      tweetID: string;
      username: string;
      createdAt: string;
      likeCount: number;
      retweetCount: number;
      replyCount: number;
      quoteCount: number;
    };
    body: string;
  };
  expanded?: boolean;
}
const { post, expanded = false } = Astro.props;
const formattedDate = new Date(post.data.createdAt).toLocaleDateString();
const tweetBody = expanded ? post.body : (post.body.length > 200 ? post.body.substring(0, 200) + '...' : post.body);
---
<article class="card-border">
  <h3 class="tweet-title">
    <a href={`/tweets/${post.data.tweetID}/`} class="tweet-link">
      Tweet {post.data.tweetID}
    </a>
  </h3>
 
  <div class="meta">
    <span>@{post.data.username}</span> •
    <span>Posted on {formattedDate}</span>
  </div>
 
  <div class="content">
    {tweetBody}
  </div>
 
  <div class="stats">
    <span>❤️ {post.data.likeCount}</span>
    <span>🔄 {post.data.retweetCount}</span>
    <span>💬 {post.data.replyCount}</span>
    {post.data.quoteCount > 0 && <span>💭 {post.data.quoteCount}</span>}
  </div>
 
  {!expanded && (
    <div class="actions">
      <a href={`/tweets/${post.data.tweetID}/`} class="read-more">
        Read full tweet →
      </a>
    </div>
  )}
</article>

