---
// components/Pagination.astro
export interface Props {
  page: {
    url: {
      prev?: string;
      next?: string;
    };
    currentPage: number;
    lastPage: number;
  };
}

const { page } = Astro.props;
---

<nav class="pagination">
  <div class="pagination-button">
    {page.url.prev ? (
      <a href={page.url.prev} class="btn btn-primary">
        <i class="fas fa-arrow-left fa-icon arrow"></i>
        Previous
      </a>
    ) : (
      <span class="btn btn-primary btn-disabled">
        <i class="fas fa-arrow-left fa-icon arrow"></i>
        Previous
      </span>
    )}
  </div>
  
  <div class="pagination-info">
    Page {page.currentPage} of {page.lastPage}
  </div>
  
  <div class="pagination-button">
    {page.url.next ? (
      <a href={page.url.next} class="btn btn-primary">
        Next
        <i class="fas fa-arrow-right fa-icon arrow"></i>
      </a>
    ) : (
      <span class="btn btn-primary btn-disabled">
        Next
        <i class="fas fa-arrow-right fa-icon arrow"></i>
      </span>
    )}
  </div>
</nav>