---
// components/Pagination.astro
export interface Props {
  page: {
    url: {
      prev?: string;
      next?: string;
    };
    currentPage: number;
    lastPage: number;
  };
}

const { page } = Astro.props;
---

<nav class="pagination">
  <div class="pagination-button">
    {page.url.prev ? (
      <a href={page.url.prev} class="nav-button">
        <span class="nav-arrow">←</span>
        Previous
      </a>
    ) : (
      <span class="nav-button nav-button--disabled">
        <span class="nav-arrow">←</span>
        Previous
      </span>
    )}
  </div>
  
  <div class="pagination-info">
    Page {page.currentPage} of {page.lastPage}
  </div>
  
  <div class="pagination-button">
    {page.url.next ? (
      <a href={page.url.next} class="nav-button">
        Next
        <span class="nav-arrow">→</span>
      </a>
    ) : (
      <span class="nav-button nav-button--disabled">
        Next
        <span class="nav-arrow">→</span>
      </span>
    )}
  </div>
</nav>

<style>
  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
  }

  .pagination-info {
    color: #666;
    font-size: 0.9rem;
  }

  .nav-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 0.375rem;
    color: #495057;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .nav-button:hover:not(.nav-button--disabled) {
    background: #e9ecef;
  }

  .nav-button--disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .nav-arrow {
    font-size: 1.2rem;
  }
</style>